<div class="issue card">
  <div class="card-header">
    <h2>Log An Issue</h2>
  </div>
  <form id="new-issue-form" class="card-body">
    <label class="form-label" for="issue-title">Title</label>
    <input type="text" name="issue-title" class="form-input" />

    <label class="form-label" for="issue-location">Location</label>
    <input type="text" name="issue-location" class="form-input" />

    <label class="form-label" for="issue-image_url">Image</label>
    <input type="text" name="issue-image_url" class="form-input" />

    <label class="form-label" for="issue-description">Description</label>
    <textarea name="issue-description" class="form-input"></textarea>

    <button type="submit" class="btn">Log</button>
  </form>
</div>

<script src="/js/new.js"></script>