<div class="issue">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{issue.title}}</h2>
      <div>
        Logged by {{issue.User.name}} on {{format_date issue.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{issue.description}}
    </div>
  </article>

  {{#if issue.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each issue.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.name}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="issue-id" value="{{issue.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>